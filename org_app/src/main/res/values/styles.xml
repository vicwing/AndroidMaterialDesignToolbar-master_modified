<resources  xmlns:tools="http://schemas.android.com/tools">


    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--<item name="android:windowNoTitle">true</item>-->
        <!--<item name="windowActionBar">false</item>-->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>


    <!--蓝色主题-->
    <style name="THeme_Blue" parent="AppTheme.Base">
        <item name="colorPrimary">@color/common_plus_signin_btn_text_dark_default</item>
        <item name="colorPrimaryDark">@color/common_plus_signin_btn_text_dark_disabled</item>
    </style>

    <!--白色主题-->
    <style name="THeme_White" parent="AppTheme.Base">
        <item name="colorPrimary">@color/common_plus_signin_btn_text_dark_default</item>
        <item name="colorPrimaryDark">@color/common_plus_signin_btn_text_dark_disabled</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <!-- viewpage文本  滑动标签标题 -->
    <style name="viewpage_slidingTabTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/viewpage_selector_slide_title</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="popwindow_delete_btn_anim_style">
        <item name="android:windowEnterAnimation">@anim/delete_btn_show</item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/delete_btn_hide</item>
        <!-- 指定消失的动画xml -->
    </style>

    <!--NightOwl   windowActionBar bune-->
    <!--<style name="AppTheme.Light" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/cus_colorPrimary</item>
        <item name="colorPrimaryDark">@color/cus_colorPrimaryDark</item>
        <item name="colorAccent">@color/google_green</item>
        <item name="android:windowBackground">@color/google_red</item>
    </style>

    <style name="MyTextStyle">
        <item name="android:textColor">#002fff</item>
        <item name="night_textColor">#fc575d</item>
        <item name="android:background">#fdceb7</item>
        <item name="night_background">#3d1416</item>
    </style>
    <style name="MyPopupMenu" parent="ThemeOverlay.AppCompat">
        <item name="android:colorBackground">#fff1c0</item>
        <item name="android:textColor">#ffb700</item>
    </style>
    <style name="MyPopupMenu.Night">
        <item name="android:colorBackground">#ffacac</item>
        <item name="android:textColor">#ff0000</item>
    </style>
    <style name="NightOwlTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="night_colorPrimary">@color/colorPrimary_n</item>
        <item name="night_colorPrimaryDark">@color/colorPrimaryDark_n</item>
        <item name="night_colorAccent">@color/colorAccent_n</item>

        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/colorPrimaryDark</item>
        <item name="night_navigationBarColor" tools:targetApi="lollipop">@color/colorPrimary_n</item>
        <item name="night_statusBarColor" tools:targetApi="lollipop">@color/colorPrimaryDark_n</item>
        <!--<item name="night_additionThemeDay">@style/AdditionThemeDay</item>-->
        <!--<item name="night_additionThemeNight">@style/AdditionThemeNight</item>-->
        <!--<item name="actionOverflowMenuStyle">@style/MyPopupMenu</item>-->
        <!--<item name="night_actionOverflowMenuStyle">@style/MyPopupMenu.Night</item>-->
    </style>

    <!--NightOwl                                NightOwl-->
</resources>
